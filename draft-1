#must be changed due to better modules
Start
  totalInvestment
  revenue
  grossprofit
  profit
  print_finances
End

calculate_totalInvestment(investment,interestRate,nrOfYears){
  prompt investment
  get investment
  prompt interestRate
  get interestRate
  prompt nrOfYears
  get nrOfYears
  returnsOnInvestment = investment * interestRate * nrOfYears
  totalInvestment = investment + returnsOnInvestment
}

calculate_revenue(itemSellingPrice,quantity){
  prompt itemSellingPrice
  get itemSellingPrice
  prompt quantity
  get quantity
  revenue = itemSellingPrice * quantity
}
  
calculate_grossprofit(costOfSales){
  prompt costOfSales
  get costOfSales
  grossprofit = revenue - costOfSales
}
  
calculate_netprofit(expenses){
  prompt expenses
  get expenses
  netprofit = grossprofit - expenses
  if (netprofit < 0) then
    loss = netprofit * -1
  Endif
}

print_finances(totalInvestment,revenue,grossprofit,netprofit,loss){
  display totalInvestment
  display revenue
  dsiplay grossprofit
  if (netprofit > 0) then
    display netprofit
  else 
    display loss
  Endif
}


